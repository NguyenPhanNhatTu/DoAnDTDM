<div class="mt-4">
    <h3>Cập nhật Khóa Học</h3>
    <form method="POST" action="/courses/{{course.id_course}}?_method=PUT">
        <div class="form-group">
            <label for="name"> Tên Khóa Học</label>
            <input type="text" class="form-control" value="{{course.name_course}}" id="name_course" name="name_course">
        </div>
        <div class="form-group">
            <label for="decriptions"> Mô Tả</label>
            <input type="text" class="form-control" value="{{course.decriptions}}" id="decriptions" name="decriptions">
        </div>
        <div class="form-group">
            <label for="videoID"> Video ID</label>
            <input type="text" class="form-control"  value="{{course.videoID}}" id="videoID" name="videoID">
        </div>
        <button type="submit" class="btn btn-primary">Lưu Lại</button>
</form>
</div>
