<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-couse-item" style="width: 18rem height: 30rem;">
            <a href="/courses/{{this.id_course}}">
                    <img class="card-img-top" src="{{this.image}}" alt="{{this.name_course}}">
            </a>
            <div class="card-body">
                <a href="/courses/{{this.id_course}}">
                    <h5 class="card-title">{{this.name_course}}</h5>
                </a>
                <p class="card-text">{{this.decriptions}}</p>
            </div>
            </div>  
        </div>
        {{/each}}
    </div>

</div>